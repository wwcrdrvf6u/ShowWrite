<Window x:Class="ShowWrite.PenSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="画笔与橡皮擦设置" Height="421" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="121.1"/>
        </Grid.RowDefinitions>

        <!-- 画笔设置标题 -->
        <TextBlock Text="画笔设置" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Grid.Row="0"/>

        <!-- 画笔颜色选择 -->
        <TextBlock Text="画笔颜色：" FontWeight="Bold" Grid.Row="1" Margin="0,5,0,5"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,5,0,5">
            <!-- 常用颜色选择 -->
            <Border Width="20" Height="20" Background="Black" Margin="2" 
                    MouseDown="ColorPreview_MouseDown" Tag="#FF000000"/>
            <Border Width="20" Height="20" Background="Red" Margin="2" 
                    MouseDown="ColorPreview_MouseDown" Tag="#FFFF0000"/>
            <Border Width="20" Height="20" Background="Green" Margin="2" 
                    MouseDown="ColorPreview_MouseDown" Tag="#FF008000"/>
            <Border Width="20" Height="20" Background="Blue" Margin="2" 
                    MouseDown="ColorPreview_MouseDown" Tag="#FF0000FF"/>
            <Border Width="20" Height="20" Background="Yellow" Margin="2" 
                    MouseDown="ColorPreview_MouseDown" Tag="#FFFFFF00"/>
            <Border Width="20" Height="20" Background="White" Margin="2" 
                    MouseDown="ColorPreview_MouseDown" Tag="#FFFFFFFF" BorderBrush="LightGray" BorderThickness="1"/>

            <!-- 自定义颜色按钮 -->
            <Button x:Name="CustomColorButton" Content="更多颜色..." Margin="10,0,0,0" 
                    Click="CustomColorButton_Click" Width="80"/>
        </StackPanel>

        <!-- 当前画笔颜色预览 -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,10,0,10">
            <TextBlock Text="当前颜色：" VerticalAlignment="Center"/>
            <Border x:Name="PenColorPreview" Width="40" Height="20" BorderBrush="Black" BorderThickness="1" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- 画笔宽度选择 -->
        <TextBlock Text="画笔宽度：" FontWeight="Bold" Grid.Row="4" Margin="0,10,0,5"/>
        <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="0,5,0,5">
            <Slider x:Name="PenWidthSlider" Minimum="1" Maximum="20" Value="2" 
                    TickFrequency="1" IsSnapToTickEnabled="True" Width="200"/>
            <TextBlock x:Name="PenWidthValue" Text="2" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- 橡皮擦设置标题 -->
        <TextBlock Text="橡皮擦设置" FontWeight="Bold" FontSize="16" Margin="0,20,0,10" Grid.Row="6"/>

        <!-- 橡皮擦宽度选择 -->
        <TextBlock Text="橡皮擦宽度：" FontWeight="Bold" Grid.Row="7" Margin="0,5,0,5"/>
        <StackPanel Orientation="Horizontal" Grid.Row="7" Margin="0,5,0,5">
            <Slider x:Name="EraserWidthSlider" Minimum="5" Maximum="50" Value="20" 
                    TickFrequency="5" IsSnapToTickEnabled="True" Width="200" Height="63"/>
            <TextBlock x:Name="EraserWidthValue" Text="20" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        

        <!-- 按钮 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="7" Margin="0,70,0,0" Width="180">
            <Button Content="确定" Width="80" Click="Ok_Click"/>
            <Button Content="取消" Width="80" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>