<Window x:Class="ShowWrite.Views.RealTimePerspectiveCorrectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="实时梯形校正" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#2B2B2B">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 校正区域 -->
        <Border Grid.Row="0" Margin="10" BorderBrush="#555" BorderThickness="1">
            <Grid>
                <Image x:Name="CorrectedImage" Stretch="Uniform"/>

                <!-- 校正画布（用于显示和拖动点） -->
                <Canvas x:Name="CorrectionCanvas" 
                        Background="Transparent"
                        SizeChanged="CorrectionCanvas_SizeChanged"
                        MouseMove="CorrectionPoint_MouseMove"
                        MouseLeftButtonUp="CorrectionPoint_MouseLeftButtonUp"/>
            </Grid>
        </Border>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="保存校正" Click="SaveButton_Click" 
                    Width="80" Height="30" Margin="5" Background="#2980B9" Foreground="White"/>
            <Button Content="重置" Click="ResetButton_Click" 
                    Width="80" Height="30" Margin="5" Background="#34495E" Foreground="White"/>
            <Button Content="清除校正" Click="ClearButton_Click" 
                    Width="80" Height="30" Margin="5" Background="#E74C3C" Foreground="White"/>
            <Button Content="关闭" Click="CloseButton_Click" 
                    Width="80" Height="30" Margin="5" Background="#7F8C8D" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>